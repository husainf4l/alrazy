# =============================================================================
# RAZZv4 Backend Configuration Template
# Copy this file to .env and update the values
# =============================================================================

# Application
APP_NAME=RAZZv4 Backend
APP_VERSION=4.0.0
DEBUG=false

# Server
HOST=0.0.0.0
PORT=8003

# Logging (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Database
# For SQLite (default): DATABASE_URL=sqlite:///./vault_system.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost:5432/dbname
DATABASE_URL=sqlite:///./vault_system.db

# Authentication (JWT)
# IMPORTANT: Generate a strong secret key for production!
# You can generate one with: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# YOLO Detection
YOLO_MODEL=yolo11m.pt
YOLO_CONFIDENCE=0.5
YOLO_DEVICE=auto

# Tracking Configuration
BYTETRACK_THRESHOLD=0.6
DEEPSORT_MAX_AGE=30
DEEPSORT_APPEARANCE_THRESHOLD=0.3

# Global ID System (Cross-Camera Person Tracking)
# How long to keep global IDs active without seeing the person (seconds)
GLOBAL_ID_TIMEOUT=30.0
# Minimum similarity to match same person across cameras (0.0-1.0)
GLOBAL_ID_SIMILARITY_THRESHOLD=0.5
# Feature smoothing factor for running average (0.0-1.0, higher = more stable)
GLOBAL_ID_FEATURE_SMOOTHING=0.7

# Deduplication Configuration
# Similarity threshold for appearance-based deduplication (0.0-1.0)
DEDUP_SIMILARITY_THRESHOLD=0.5
# Distance threshold for spatial deduplication (pixels)
DEDUP_DISTANCE_THRESHOLD=300

# Camera Configuration
CAMERA_RECONNECT_DELAY=5
CAMERA_FPS=15

# Face Recognition
FACE_RECOGNITION_ENABLED=true
FACE_RECOGNITION_TOLERANCE=0.6

# Upload Paths
UPLOAD_DIR=uploads
FACE_UPLOAD_DIR=uploads/faces
