# SafeRoom Detection System Configuration
# Copy this to .env and modify as needed

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Room Configuration
ROOM_ID=room_safe
MAX_OCCUPANCY=1
VIOLATION_THRESHOLD=2

# YOLO Model Configuration
# Options: yolov8n.pt (nano), yolov8s.pt (small), yolov8m.pt (medium), yolov8l.pt (large)
YOLO_MODEL=yolov8n.pt

# Violation Webhook (optional)
# When a violation occurs, POST the event to this URL
VIOLATION_WEBHOOK=

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Logging
LOG_LEVEL=INFO

# Camera Stream Polling (if using RTSP polling instead of direct ingestion)
RTSP_POLL_INTERVAL=0.1
RTSP_TIMEOUT=5